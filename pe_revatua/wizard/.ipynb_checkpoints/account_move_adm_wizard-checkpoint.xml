<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    <!-- form -->
        <record model="ir.ui.view" id="adm_invoices_wizard_form">
            <field name="name">adm.invoices.wizard.form</field>
            <field name="model">account.move.adm.wizard</field>
            <field name="arch" type="xml">
                <form string="Groupement des facture ADM">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="adm_target"/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="group_adm_invoices" type="object" string='CrÃ©er' class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    
    <!-- Action pour ouvrir le wizard pour les groupements de factures -->
    <record id="adm_invoices_wizard_groupement" model="ir.actions.act_window" >
            <field name="name">Facture ADM Global</field>
            <field name="res_model">account.move.adm.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="adm_invoices_wizard_form"/>
            <field name="target">new</field>
    </record>
</data></odoo>