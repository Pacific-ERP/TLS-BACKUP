<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
        <!-- Form -->
        <record id="revatua_sale_order_form" model="ir.ui.view">
            <field name="name">Pacific-ERP pe_revatua : sale.order (form)</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
            <!-- Détails -->
                <!-- Boutton : Détails des lignes  [Wizard] à voir si utile-->
                <!-- <xpath expr="//header" position="inside">
                    <button name="open_wizard_sale_line_full_detail" type="object"
                        string="Détails des lignes" class="oe_highlight"
                        attrs="{'invisible': [('revatua_ck', '=', False)]}"/>
                </xpath> -->
                
                <!-- Champs : Coche Revatua -->
                <xpath expr="//page[@name='other_information']//field[@name='company_id']" position="after">
                    <field name="revatua_ck" invisible="1"/>
                </xpath>
                
                <!-- Move(picking_policy) : before[validity_date] -->
                <xpath expr="//field[@name='validity_date']" position="before">
                    <xpath expr="//field[@name='picking_policy']" position="move"/>
                </xpath>
                
                <!-- Champs : Coche Est livré -->
                <xpath expr="//field[@name='pe_destination']" position="after">
                    <field name="is_deliver" widget="boolean_toggle" attrs="{'readonly': [('state', 'not in', ('sale','done'))], 'invisible': [('revatua_ck', '=', False)]}"/>
                </xpath>

                <!-- Champs : Informations Expéditeur/Destinataire -->
                <xpath expr="//group[@name='sale_header']" position="after">
                    <group name="detail_livraison" attrs="{'invisible': [('revatua_ck', '=', False)]}">
                        <group name="lieu_recuperation" string="Lieu de récupération">
                            <field name="commune_recup"/>
                            <field name="ile_recup"/>
                            <field name="contact_expediteur"/>
                            <field name="tel_expediteur" attrs="{'invisible': ['&amp;',['tel_expediteur','=',False],['mobil_expediteur','!=',False]]}"/>
                            <field name="mobil_expediteur" attrs="{'invisible': ['|',['tel_expediteur','!=',False],['mobil_expediteur','=',False]]}"/>
                        </group>
                        <group name="lieu_destinataire" string="Destinataire">
                            <field name="commune_dest"/>
                            <field name="ile_dest"/>
                            <field name="contact_dest"/>
                            <field name="tel_dest" attrs="{'invisible': ['&amp;',['tel_dest','=',False],['mobil_dest','!=',False]]}"/>
                            <field name="mobil_dest" attrs="{'invisible': ['|',['tel_dest','!=',False],['mobil_dest','=',False]]}"/>
                        </group>
                    </group>
                </xpath>
                
            <!-- Ligne d'articles -->
                <!-- Sub-Tree(order_line) -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='price_subtotal']" position="after">
                    <!-- Invisible -->
                    <field name="base_rpa" invisible="1"/>
                    <field name="tarif_minimum_rpa" invisible="1"/>
                    <field name="base_maritime" invisible="1"/>
                    <field name="tarif_minimum_maritime" invisible="1"/>
                    <field name="base_terrestre" invisible="1"/>
                    <field name="tarif_minimum_terrestre" invisible="1"/>
                    <field name="tarif_minimum" invisible="1"/>
                    <field name="check_adm" invisible="1"/>
                    <!-- Afficher -->
                    <field name="tarif_terrestre" sum="Terrestre" digits="[42,0]" optional="show" attrs="{'column_invisible': [('parent.revatua_ck', '=', False)]}"/>
                    <field name="tarif_maritime" sum="Maritime" digits="[42,0]" optional="show" attrs="{'column_invisible': [('parent.revatua_ck', '=', False)]}"/>
                    <field name="tarif_rpa" sum="RPA" digits="[42,0]" optional="show" attrs="{'column_invisible': [('parent.revatua_ck', '=', False)]}"/>
                    <field name="tarif_rpa_ttc" sum="RPA" digits="[42,0]" optional="hide" attrs="{'column_invisible': [('parent.revatua_ck', '=', False)]}"/>
                    <field name="price_total" optional="show" string="Total TTC" attrs="{'column_invisible': [('parent.revatua_ck', '=', False)]}"/>
                </xpath>

                <!-- Sub-Form(order_line) -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/form[1]" position="inside">
                    <notebook>
                        <page string="Aremiti">
                            <group>
                                <group string="Base">
                                    <field name="base_terrestre"/>
                                    <field name="base_maritime"/>
                                    <field name="base_rpa"/>
                                </group>
                                <group string="Minimum">
                                    <field name="tarif_minimum_terrestre"/>
                                    <field name="tarif_minimum_maritime"/>
                                    <field name="tarif_minimum_rpa"/>
                                </group>
                                <group string="Tarif">
                                    <field name="tarif_terrestre"/>
                                    <field name="tarif_maritime"/>
                                    <field name="tarif_rpa"/>
                                </group>
                            </group>
                        </page>
                        <page string="Ligne de facture">
                            <field name="invoice_lines" position="move"/>
                        </page>
                    </notebook>
                </xpath>
                
                <!-- Champs : Volume, Poids -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom']" position="after">
                    <field name="r_volume" string="Vol(m³)" optional="show"/>
                    <field name="r_weight" string="Poids(T)" optional="show"/>
                </xpath>
                
                <!-- Attribute(string) : order_line.product_uom_qty -->
                <!-- Attribute(digits) : order_line.product_uom_qty -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="string">Qté</attribute>
                    <attribute name="digits">[12,3]</attribute>
                </xpath>
                
                <!-- Attribute(invisible) : div[@name='invoice_lines'] -->
                <xpath expr="//div[@name='invoice_lines']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                
                <!-- Attribute(string) : order_line.price_unit -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='price_unit']" position="attributes">
                    <attribute name="string">Prix U</attribute>
                </xpath>
                
                <!-- Attribute(string) : order_line.price_subtotal -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='price_subtotal']" position="attributes">
                    <attribute name="string">Total HT</attribute>
                </xpath>
                
                <!-- Attribute(no_create) : order_line.product_id -->
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create":true}</attribute>
                </xpath>
                
            <!-- Totaux -->
                <!-- Total Administration & Customer -->
                <xpath expr="//field[@name='note']/../.." position="before">
                    <div class="oe_left" attrs="{'invisible': [('revatua_ck', '=', False)]}">
                        <table style="width:200px">
                            <tbody>
                                <tr>
                                    <td style="width:200px"><b>Montant Client :</b></td>
                                    <td style="width:100px;text-align:right !important;"><b><field name="sum_customer" readonly="1" force_save="1" widget="monetary"/></b></td>
                                </tr>
                                <tr>
                                    <td style="width:200px"><b>Montant ADM :</b></td>
                                    <td style="width:100px;text-align:right !important;"><b><field name="sum_adm" readonly="1" force_save="1" widget="monetary"/></b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </xpath>
                
            </field></record>
</data></odoo>       