<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
        <!-- rend visible les champs pour le groups revatua / users -->
        <record id="product_template_form_aremiti_only" model="ir.ui.view">
            <field name="name">Pacific-ERP product.template : pe_revatua (form)</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <!-- Coche Revatua -->
                <xpath expr="//page[@name='general_information']//field[@name='company_id']" position="after">
                    <field name="revatua_ck" groups="base.group_no_one"/>
                </xpath>
                <!-- button ADM -->
                <xpath expr="//field[@name='purchase_ok']/.." position="after">
                    <span class="d-inline-block" attrs="{'invisible': [('revatua_ck', '=', False)]}">
                        <field name="check_adm"/>
                        <label for="check_adm"/>
                    </span>
                </xpath>
                <!-- Famille d'article -->
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="famille_produit" attrs="{'invisible': [('revatua_ck', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="contact_adm" attrs="{'invisible': [['check_adm','=',False]], 'required': [['check_adm','!=',False]]}" string="DÃ©partement (ADM)" domain="[['id_adm','=',True]]" context="{'default_id_adm': True}"/>
                </xpath>
                <!-- Champs tarif Revatua -->
                <xpath expr="//notebook/page[1]/group[1]" position="after">
                    <group attrs="{'invisible': [('revatua_ck', '=', False)]}">
                        <group string="Normal">
                            <field name="tarif_normal" class="oe_inline" widget="monetary"/>
                            <field name="tarif_minimum" class="oe_inline" widget="monetary"/>
                        </group>
                        <group string="RPA">
                            <field name="tarif_rpa" class="oe_inline" widget="monetary"/>
                            <field name="tarif_minimum_rpa" class="oe_inline" widget="monetary"/>
                            <field name="check_adm" invisible="1"/>
                        </group>
                        <group string="Terrestre">
                            <field name="ratio_terrestre" widget="percentage" force_save="1"/>
                            <field name="tarif_terrestre" class="oe_inline" widget="monetary"/>
                            <field name="tarif_minimum_terrestre" class="oe_inline" widget="monetary"/>
                        </group>
                        <group string="Maritime">
                            <field name="ratio_maritime" widget="percentage" force_save="1"/>
                            <field name="tarif_maritime" class="oe_inline" widget="monetary"/>
                            <field name="tarif_minimum_maritime" class="oe_inline" widget="monetary"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

</data></odoo>        