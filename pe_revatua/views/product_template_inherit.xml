<odoo>
    <data>
        <!-- rend visible champs pour groups donner -->
        <record id="product_template_form_aremiti_only" model="ir.ui.view">
            <field name="name">product.template.form.aremiti.only</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="groups_id" eval="[(6, 0, [ref('pe_revatua.group_revatua_users') ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]/group[1]" position="after">
                    <group>
                        <group string="Normal">
                            <field name="tarif_normal" class="oe_inline" widget='monetary'/>
                            <field name="tarif_minimum" class="oe_inline" widget='monetary'/>
                        </group>
                        <group string="Maritime">
                            <field name="tarif_maritime" class="oe_inline" widget='monetary'/>
                            <field name="tarif_minimum_maritime" class="oe_inline" widget='monetary'/>
                        </group>
                        <group string="Terrestre">
                            <field name="tarif_terrestre" class="oe_inline" widget='monetary'/>
                            <field name="tarif_minimum_terrestre" class="oe_inline" widget='monetary'/>
                        </group>
                        <group string="RPA">
                            <field name="tarif_rpa" class="oe_inline" widget='monetary'/>
                            <field name="tarif_minimum_rpa" class="oe_inline" widget='monetary'/>
                        </group>
                        <group string="Autres">
                            <field name="famille_produit"/>
                            <field name="etiquette_produit" widget="many2many_tags"/>
                            <field name="check_adm"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
        