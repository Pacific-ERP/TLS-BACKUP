<odoo>
    <data>
    <!-- Form -->
    <record id="pe_acces_right_account_move_form" model="ir.ui.view">
        <field name="name">pe_acces_right_account_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Rendre invisible le bouton remettre en brouillon -->
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
        
    <!-- Form : groupe Facturation retrait bouton avoir -->
    <record id="pe_acces_right_account_move_form_remove_credit_note" model="ir.ui.view">
        <field name="name">pe_acces_right_account_move_form_remove_credit_note</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('pe_acces_right.pe_create_credit_note') ])]"/>
        <field name="arch" type="xml">
            <!-- Rendre invisible le bouton avoir pour un groupe donnÃ©e-->
            <xpath expr="//button[@name='action_reverse']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
        
    </data>
</odoo>
        