<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
    <template id="pe_custom_web_product_price" inherit_id="website_sale.product_price">
        <xpath expr="//h3/span[1]" position="replace">
            <t t-if="combination_info['price'] > 1">
                <span class="oe_price" style="white-space: nowrap;" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
            </t>
            <t t-else="">
                <span class="oe_price" style="white-space: nowrap; color:red;" t-esc="'%s' % 'Prix sur devis'" />
            </t>
        </xpath>
    </template>

</data></odoo>
