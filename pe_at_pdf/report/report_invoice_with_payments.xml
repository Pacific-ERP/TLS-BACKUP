<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
        <!-- Template code barre -->
        <template id="pe_at_pdf_report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
            <!-- Gestion du multi société -->
            <xpath expr="//t/t/t[3]" position="replace">
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document' and o.company_id.id == 1" t-call="account.report_invoice_document" t-lang="lang"/>
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document' and o.company_id.id == 2" t-call="pe_at_pdf.pe_at_pdf_report_invoice_document" t-lang="lang"/>
            </xpath>
        </template>

</data></odoo>
