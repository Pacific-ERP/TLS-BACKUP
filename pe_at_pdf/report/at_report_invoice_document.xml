<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="pe_at_pdf_report_invoice_document">
            <t t-call="pe_at_pdf.pe_at_pdf_custom_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="doc" t-value="o"/>
                <style>
                    .contact_bloc {
                        border: 1px solid black;
                        font-size: 13px;
                    }
                    
                    .contact_bloc strong{
                        font-size: 15px;
                    }
                    
                    .pe_invoice_detail_bloc {
                        padding-top: 15px;
                        border : 1px solid black;
                        background-color: invisible;
                        height : 680px;
                        max-height : 680px;
                        font-size: 13px;
                    }
                    
                    .pe_invoice_detail_bloc .pe_separate_bloc {
                        margin-bottom: 15px;
                    }
                    
                    .pe_invoice_detail_bloc .montant_adm_custo{
                        position: absolute;
                        bottom: 10px;
                        left: 10px;
                    }
                    
                    div.pe_information_bloc {
                        margin-top: 20px;
                        border : 1px solid black;
                        background-color: invisible;
                        text-align:center;
                        line-height: 1.05;
                        padding-top: 2%;
                        padding-bottom: 1%;
                        font-size: 14px;
                    }
                    
                    strong,th{
                        color : #bc0d1b;
                        font-size: 14px;
                    }
                    
                    #pe_invoice_informations{
                        <!--background-color:red;-->
                        font-size:16px;
                        height:65px;
                    }
                            
                </style>
                <!-- Bloc Client/Expéditeur/Destinataire -->
                <div class="row" style="padding-bottom:20px">
                    <div class="col-3 contact_bloc" name="div_incoming_address"><!--t-options='{&quot;phone_icons&quot;: True}-->
                        <span><strong>Client :</strong></span>
                        <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                    <div class="col-1"/>
                    <div class="col-4 contact_bloc" name="div_incoming_address" t-if="doc.contact_expediteur"><!--t-options='{&quot;phone_icons&quot;: True}-->
                        <span><strong>Expéditeur :</strong></span>
                        <div t-field="doc.contact_expediteur.name"/>
                        <div>
                            <span>Tél :</span>
                            <t t-if="doc.tel_expediteur">
                                <span t-field="doc.tel_expediteur"/>
                            </t>
                            <t t-if="not doc.tel_expediteur and doc.mobil_expediteur">
                                <span t-field="doc.mobil_expediteur"/>
                            </t>  
                        </div>
                        <div>
                            <span t-field="doc.ile_recup"/>
                            <span> - </span>
                            <span t-field="doc.commune_recup"/>
                        </div>
                    </div>
                    <div class="col-1"/>
                    <div class="col-3 contact_bloc" name="div_incoming_address" t-if="doc.contact_dest">
                        <span><strong>Destinataire :</strong></span>
                        <div t-field="doc.contact_dest.name"/>
                        <div>
                            <span>Tél :</span>
                            <t t-if="doc.tel_dest">
                                <span t-field="doc.tel_dest"/>
                            </t>
                            <t t-if="not doc.tel_dest and doc.mobil_dest">
                                <span t-field="doc.mobil_dest"/>
                            </t>  
                        </div>
                        <div t-if="doc.ile_dest and doc.commune_dest">
                            <span t-field="doc.ile_dest"/>
                            <span> - </span>
                            <span t-field="doc.commune_dest"/>
                        </div>
                    </div>
                </div>
                
                <div class="page">
                    <div class="row pe_invoice_detail_bloc">
                        <div class="col-12">
                            <h2 class="invoice_name">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Facture</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Brouillon</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Facture annulé</span>
                                <span t-if="o.move_type == 'out_refund'">Avoir</span>
                                <span t-if="o.move_type == 'in_refund'">Avoir fournisseur</span>
                                <span t-if="o.move_type == 'in_invoice'">Facture fournisseur</span>
                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </h2>
                            <!-- Détails de la ventes -->
                            <div class="row mt32 mb32 pe_separate_bloc" id="pe_invoice_informations">
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                                    <!--<t t-if="o.move_type == 'out_invoice'"><strong>DATE DE LA FACTURE:</strong></t>-->
                                    <!--<t t-elif="o.move_type == 'out_refund'"><strong>DATE DE L'AVOIR:</strong></t>-->
                                    <!--<t t-elif="o.move_type == 'out_receipt'"><strong>DATE DE RÉCEPTION:</strong></t>-->
                                    <!--<t t-else=""><strong>DATE:</strong></t>-->
                                    <strong>DATE:</strong>
                                    <p class="m-0" t-field="o.invoice_date"/>
                                </div>
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                    <strong>ÉCHÉANCE</strong>
                                    <p class="m-0" t-field="o.invoice_date_due"/>
                                </div>
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                                    <strong>ORIGINE</strong>
                                    <p class="m-0" t-field="o.invoice_origin"/>
                                </div>
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.pe_bc" name="customer_code">
                                    <strong>RÉF CLIENT</strong>
                                    <p class="m-0" t-field="o.pe_bc"/>
                                </div>
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.ref" name="reference">
                                    <strong>RÉFÉRENCE</strong>
                                    <p class="m-0" t-field="o.ref"/>
                                </div>
                                <div class="col-auto col-2 mw-100 mb-2" t-if="o.user_id" name="reference">
                                    <strong>VENDEUR</strong>
                                    <p class="m-0" t-field="o.user_id"/>
                                </div>
                            </div>
                            <!-- Lignes de ventes -->
                            <div class="row pe_separate_bloc">
                                <!--Is there a discount on at least one line? -->
                                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    
                                <table class="table table-sm o_main_table">
                                    <!--In case we want to repeat the header, remove "display: table-row-group" -->
                                    <thead style="display: table-row-group">
                                        <tr>
                                            <th name="th_description" style="vertical-align: middle;" class="text-center">DESCRIPTION</th>
                                            <th name="th_volume" style="vertical-align: middle;" class="text-center">VOL</th>
                                            <th name="th_poid" style="vertical-align: middle;" class="text-center">POIDS</th>
                                            <th name="th_quantity" style="vertical-align: middle;" class="text-center">QTE</th>
                                            <th name="th_priceunit" style="vertical-align: middle;" class="text-center">PU</th>
                                            <th name="th_taxes" style="vertical-align: middle;" class="text-center">TAXES</th>
                                            <th name="th_discount" t-if="display_discount" style="vertical-align: middle;" class="text-center">
                                                <span>REM.%</span>
                                            </th>
                                            
                                            <th name="th_subtotal" style="vertical-align: middle;" class="text-center">
                                                <span>TOTAL HT</span>
                                            </th>
                                            <th name="th_terrestre" style="vertical-align: middle;" class="text-center">TER</th>
                                            <th name="th_maritime" style="vertical-align: middle;" class="text-center">MAR</th>
                                            <th name="th_rpa" style="vertical-align: middle;" class="text-center">RPA</th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                    
                                        <t t-foreach="lines" t-as="line">
                    
                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                    
                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <t t-if="not line.display_type">
                                                    <td name="td_name" class="text-left">
                                                        <span t-field="line.name"/>
                                                    </td>
                                                    <td name="td_volume" class="text-center">
                                                        <span t-field="line.r_volume"/>
                                                    </td>
                                                    <td name="td_poids" class="text-center">
                                                        <span t-field="line.r_weight"/>
                                                    </td>
                                                    <td name="td_quantity" class="text-center">
                                                        <span t-field="line.quantity"/>
                                                        <span t-field="line.product_uom_id"/>
                                                    </td>
                                                    <td name="td_priceunit" class="text-center">
                                                        <span t-field="line.price_unit"/>
                                                    </td>
                                                    <td name="td_taxes" class="text-center">
                                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name).replace('TVA', ''), line.tax_ids))"/>
                                                    </td>
                                                    <td t-if="display_discount" class="text-center" groups="product.group_discount_per_so_line">
                                                        <span t-field="line.discount"/>
                                                    </td>
                                                    <td name="td_subtotal" class="text-right o_price_total">
                                                        <span t-field="line.price_subtotal"/>
                                                    </td>
                                                    <td name="td_terrestre" class="text-center">
                                                        <span t-field="line.tarif_terrestre" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                    <td name="td_maritime" class="text-center">
                                                        <span t-field="line.tarif_maritime" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                    <td name="td_rpa" class="text-center">
                                                        <span t-field="line.tarif_rpa" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                </t>
                                                <t t-if="line.display_type == 'line_section'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                    <t t-set="current_section" t-value="line"/>
                                                    <t t-set="current_subtotal" t-value="0"/>
                                                </t>
                                                <t t-if="line.display_type == 'line_note'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                </t>
                                            </tr>
                    
                                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                                <tr class="is-subtotal text-right">
                                                    <td colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Totaux -->
                            <div class="row pe_separate_bloc">
                                <!-- Totaux Devis (taxes, HT/TTC) -->
                                <div class="col-5"/>
                                <!-- Tax totals -->
                                <div class="col-7">
                                    <div class="clearfix">
                                        <div id="total" class="row">
                                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                                <table class="table table-sm" style="page-break-inside: avoid;">
                
                                                    <!--Tax totals-->
                                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                                    <t t-call="account.document_tax_totals"/>
                
                                                    <!--Payments-->
                                                    <t t-if="print_with_payments">
                                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                                <tr>
                                                                    <td>
                                                                        <i class="oe_form_field text-right oe_payment_label">Payé le <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                                    </td>
                                                                    <td class="text-right">
                                                                        <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                            <t t-if="len(payments_vals) &gt; 0">
                                                                <tr class="border-black">
                                                                    <td><strong>Montant dû</strong></td>
                                                                    <td class="text-right">
                                                                        <span t-field="o.amount_residual"/>
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                        </t>
                                                    </t>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Totaux Montant Client/ADM -->
                            <div class="montant_adm_custo">
                                <strong> MONTANT CLIENT : </strong> <b><span t-field="doc.sum_customer"/></b> <br/>
                                <strong t-if="doc.sum_adm"> MONTANT ADMINISTRATION : </strong> <b><span t-if="doc.sum_adm" t-field="doc.sum_adm"/> </b>
                            </div>
                        </div>
                        
                    </div>
                    <!-- Bloc informations additionnelles -->
                    <!--<div class="row pe_information_bloc">-->
                    <!--    <div class="col-12">-->
                    <!--        <strong><u> INFORMATION ADDITIONNELLES :</u></strong><br/>-->
                    <!--        <div t-field="doc.company_id.other_information_bloc"/>-->
                    <!--    </div>-->
                    <!--</div>-->
                    
                </div>
            </t>
        </template>
    </data>
</odoo>