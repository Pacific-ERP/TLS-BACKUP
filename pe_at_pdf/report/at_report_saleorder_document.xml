<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
        <!-- Template code barre -->
        <template id="pe_at_pdf_report_saleorder_document">
            <t t-call="pe_at_pdf.pe_at_pdf_custom_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-set="o" t-value="doc"/>
                <style>
                    .contact_bloc {
                        border: 1px solid black;
                        font-size: 13px;
                    }
                    
                    .contact_bloc strong{
                        font-size: 15px;
                    }
                    
                    .pe_sale_detail_bloc {
                        padding-top: 15px;
                        border : 1px solid black;
                        background-color: invisible;
                        height : 550px;
                        max-height : 550px;
                        font-size: 13px;
                    }
                    
                    .pe_sale_detail_bloc .pe_separate_bloc {
                        margin-bottom: 15px;
                    }
                    
                    .pe_sale_detail_bloc .montant_adm_custo{
                        position: absolute;
                        bottom: 10px;
                        left: 10px;
                    }
                    
                    div.pe_information_bloc {
                        margin-top: 20px;
                        border : 1px solid black;
                        background-color: invisible;
                        text-align:center;
                        line-height: 1.05;
                        padding-top: 2%;
                        padding-bottom: 1%;
                        font-size: 14px;
                    }
                    
                    strong,th{
                        color : #bc0d1b;
                        font-size: 14px;
                    }
                    
                    #pe_sale_informations{
                        <!--background-color:red;-->
                        font-size:16px;
                        height:65px;
                    }
                    
                </style>
                
                <div class="row" style="padding-bottom:20px">
                        <div class="col-3 contact_bloc" name="div_incoming_address"><!--t-options='{&quot;phone_icons&quot;: True}-->
                            <span><strong>Client :</strong></span>
                            <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        </div>
                        <div class="col-1"/>
                        <div class="col-4 contact_bloc" name="div_incoming_address" t-if="doc.contact_expediteur"><!--t-options='{&quot;phone_icons&quot;: True}-->
                            <span><strong>Expéditeur :</strong></span>
                            <div t-field="doc.contact_expediteur.name"/>
                            <div>
                                <span>Tél :</span>
                                <t t-if="doc.tel_expediteur">
                                    <span t-field="doc.tel_expediteur"/>
                                </t>
                                <t t-if="not doc.tel_expediteur and doc.mobil_expediteur">
                                    <span t-field="doc.mobil_expediteur"/>
                                </t>  
                            </div>
                            <div>
                                <span t-field="doc.ile_recup"/>
                                <span> - </span>
                                <span t-field="doc.commune_recup"/>
                            </div>
                        </div>
                        <div class="col-1"/>
                        <div class="col-3 contact_bloc" name="div_incoming_address" t-if="doc.contact_dest">
                            <span><strong>Destinataire :</strong></span>
                            <div t-field="doc.contact_dest.name"/>
                            <div>
                                <span>Tél :</span>
                                <t t-if="doc.tel_dest">
                                    <span t-field="doc.tel_dest"/>
                                </t>
                                <t t-if="not doc.tel_dest and doc.mobil_dest">
                                    <span t-field="doc.mobil_dest"/>
                                </t>  
                            </div>
                            <div t-if="doc.ile_dest and doc.commune_dest">
                                <span t-field="doc.ile_dest"/>
                                <span> - </span>
                                <span t-field="doc.commune_dest"/>
                            </div>
                        </div>
                    </div>
                <div class="page">
                    <div class="row pe_sale_detail_bloc">
                        <div class="col-12">
                            <!-- Détails de la ventes -->
                            <div class="row mt32 mb32 pe_separate_bloc" id="pe_sale_informations">
                                <div t-if="doc.date_order" class="col-auto col-4 mw-100 mb-2">
                                    <strong>DATE DE LA COMMANDE :</strong>
                                    <p class="m-0" t-field="doc.date_order"/>
                                </div>
                                <div t-if="doc.name" class="col-auto col-4 mw-100 mb-2">
                                    <strong>COMMANDE N° :</strong>
                                    <p class="m-0" t-field="doc.name"/>
                                </div>
                                <div t-if="doc.user_id.name" class="col-auto col-4 mw-100 mb-2">
                                    <strong>VENDEUR :</strong>
                                    <p class="m-0" t-field="doc.user_id"/>
                                </div>
                            </div>
                            <!-- Lignes de ventes -->
                            <div class="row pe_separate_bloc">
                                <!-- Is there a discount on at least one line? -->
                                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
                    
                                <table class="table table-sm o_main_table">
                                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                                    <thead style="display: table-row-group">
                                        <tr>
                                            <th name="th_description" class="text-center">DESCRIPTION</th>
                                            <th name="th_volume" class="text-center">VOL</th>
                                            <th name="th_poid" class="text-center">POIDS</th>
                                            <th name="th_quantity" class="text-center">QTE</th>
                                            <th name="th_priceunit" class="text-center">PU</th>
                                            <th name="th_taxes" class="text-center">TAXES</th>
                                            <th name="th_discount" t-if="display_discount" class="text-center">
                                                <span>REM.%</span>
                                            </th>
                                            
                                            <th name="th_subtotal" class="text-center">
                                                <span>TOTAL HT</span>
                                            </th>
                                            <th name="th_terrestre" class="text-center">TERR</th>
                                            <th name="th_maritime" class="text-center">MARIT</th>
                                            <th name="th_rpa" class="text-center">RPA</th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">
                    
                                        <t t-set="current_subtotal" t-value="0"/>
                    
                                        <t t-foreach="doc.order_line" t-as="line">
                    
                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                    
                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <t t-if="not line.display_type">
                                                    <td name="td_name" class="text-left">
                                                        <span t-field="line.name"/>
                                                    </td>
                                                    <td name="td_volume" class="text-center">
                                                        <span t-field="line.r_volume"/>
                                                    </td>
                                                    <td name="td_poids" class="text-center">
                                                        <span t-field="line.r_weight"/>
                                                    </td>
                                                    <td name="td_quantity" class="text-center">
                                                        <span t-field="line.product_uom_qty"/>
                                                        <span t-field="line.product_uom"/>
                                                    </td>
                                                    <td name="td_priceunit" class="text-center">
                                                        <span t-field="line.price_unit"/>
                                                    </td>
                                                    <td name="td_taxes" class="text-center">
                                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name).replace('TVA', ''), line.tax_id))"/>
                                                    </td>
                                                    <td t-if="display_discount" class="text-center" groups="product.group_discount_per_so_line">
                                                        <span t-field="line.discount"/>
                                                    </td>
                                                    <td name="td_subtotal" class="text-right o_price_total">
                                                        <span t-field="line.price_subtotal"/>
                                                    </td>
                                                    <td name="td_terrestre" class="text-center">
                                                        <span t-field="line.tarif_terrestre" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                    <td name="td_maritime" class="text-center">
                                                        <span t-field="line.tarif_maritime" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                    <td name="td_rpa" class="text-center">
                                                        <span t-field="line.tarif_rpa" t-options="{'widget': 'integer'}"/>
                                                    </td>
                                                </t>
                                                <t t-if="line.display_type == 'line_section'">
                                                    <td name="td_section_line" colspan="99">
                                                        <span t-field="line.name"/>
                                                    </td>
                                                    <t t-set="current_section" t-value="line"/>
                                                    <t t-set="current_subtotal" t-value="0"/>
                                                </t>
                                                <t t-if="line.display_type == 'line_note'">
                                                    <td name="td_note_line" colspan="99">
                                                        <span t-field="line.name"/>
                                                    </td>
                                                </t>
                                            </tr>
                    
                                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                                <tr class="is-subtotal text-right">
                                                    <td name="td_section_subtotal" colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Totaux -->
                            <div class="row pe_separate_bloc">
                                <!-- Totaux Devis (taxes, HT/TTC) -->
                                <div class="col-5"/>
                                <div class="col-7">
                                    <div class="clearfix" name="so_total_summary">
                                        <div id="total" class="row" name="total">
                                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                                <table class="table table-sm">
                                                    <!-- Tax totals -->
                                                    <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                                    <t t-call="account.document_tax_totals"/>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Totaux Montant Client/ADM -->
                            <div class="montant_adm_custo">
                                <strong> MONTANT CLIENT : </strong> <b><span t-field="doc.sum_customer"/></b> <br/>
                                <strong t-if="doc.sum_adm"> MONTANT ADMINISTRATION : </strong> <b><span t-if="doc.sum_adm" t-field="doc.sum_adm"/> </b>
                            </div>
                        </div>
                        
                    </div>
                    <!-- Bloc informations additionnelles -->
                    <div class="row pe_information_bloc">
                        <div class="col-12">
                            <strong><u> INFORMATION ADDITIONNELLES :</u></strong><br/>
                            <div t-field="doc.company_id.other_information_bloc"/>
                        </div>
                    </div>
                    
                </div>
            </t>
        </template>

</data></odoo>
