<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pe_sale_list_inherit" model="ir.ui.view">
        <field name="name">pe.sale.list.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <!-- code couleur globale selon l'état de la facturation et de la livraison -->
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-bf">delivery_status == 'all_delivered' and invoices_status == 'invoiced'</attribute>
                <attribute name="decoration-success">delivery_status == 'all_delivered' and invoices_status == 'invoiced'</attribute>
            </xpath>
            <!-- affiche la colonne statu livraison en widget badge + code couleur selon l'état -->
            <xpath expr="//field[@name='state']" position="before">
                <!-- livraison -->
                <field name="delivery_status" optional="show" widget="badge" decoration-danger="delivery_status == 'no'" decoration-warning="delivery_status == 'in_delivery'" decoration-success="delivery_status == 'all_delivered'" />
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <!-- facturation -->
                <field name="invoices_status" optional="show" widget="badge" decoration-danger="invoices_status == 'no'" decoration-warning="invoices_status == 'to_invoice'" decoration-success="invoices_status == 'invoiced'" />
            </xpath>
        </field>
    </record>
</odoo>
