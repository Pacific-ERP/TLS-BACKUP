<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
    <record id="pe_custom_product_template_form" model="ir.ui.view">
        <field name="name">Pacific-ERP pe_custom : product.template(form)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            
            <!-- modification avec xpath  // recherche sur tout le documents -->
            <xpath expr="//field[@name='default_code']" position="after">
                <!-- Put fields/attributes here   -->
                <field name="code_douanier"/>
                <field name="ref_constructeur"/>
            </xpath>
        </field>
    </record>

</data></odoo>