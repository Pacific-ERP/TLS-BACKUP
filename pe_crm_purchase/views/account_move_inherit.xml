<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    
    <record id="crm_account_move_form_view" model="ir.ui.view">
        <field name="name">crm.account.move.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']/.." position="after">
                <field name="opportunity_id" attrs="{'invisible': [('move_type', '=','out_invoice')]}"/>
            </xpath>

        </field>
    </record>

</data></odoo>