<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
<!-- Shipping Management -->
    <!-- Action pour ouvrir le modèle Shipping Management -->
    <record model="ir.actions.act_window" id="site_web_fichiers">
            <field name="name">Fichiers</field>
            <field name="res_model">ir.attachment</field>
            <field name="views">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Fichers
                </p>
            </field>
    </record>

    <!-- Ajout de notre menu à la page d'acceuil des modules (sans attributs parent) -->
    <menuitem name="Fichiers" id="pe_sale_fichiers" action="site_web_fichiers" sequence="15" parent="website.menu_website_global_configuration"/>
      
</data></odoo>