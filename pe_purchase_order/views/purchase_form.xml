<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pe_purchase_form_inherit" model="ir.ui.view">
        <field name="name">pe.purchase.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="delivery_status" readonly="0"/>
            </xpath>
            <xpath expr="//field[@name='invoice_status']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][1]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('delivery_status', '!=', 'all_delivered'), ('invoice_status', 'in', ('no', 'invoiced'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('delivery_status', '!=', 'all_delivered'), ('invoice_status', 'not in', ('no', 'invoiced')), ('order_line', '=', [])]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
