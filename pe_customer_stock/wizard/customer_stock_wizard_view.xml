<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form -->
        <record id="pe_customer_stock_wizard_form" model="ir.ui.view">
            <field name="name">Pacific-ERP pe_customer_stock : customer.stock.wizard(form)</field>
            <field name="model">customer.stock.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="direct_delivery"/>
                                <field name="partner_id"/>
                                <field name="destination_id" attrs="{'invisible' : [('direct_delivery','=', True)]}" context="{'default_location_id','=' 5}"/>
                                <field name="origin"/>
                                <field name="picking_id" invisible="0"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="OpÃ©rations">
                                <field name="wizard_lines">
                                    <tree create="0" delete="0">
                                        <field name="wizard_id" optional="hide"/>
                                        <field name="move_id" optional="hide"/>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_id"/>
                                        <field name="product_uom_category_id" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
       
    </data>
</odoo>