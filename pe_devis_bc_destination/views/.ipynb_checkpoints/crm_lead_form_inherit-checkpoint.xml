<?xml version="1.0" encoding="utf-8" ?>
<odoo><data>
    <!-- form -->
    <record id="pe_devis_bc_crm_lead_view_form" model="ir.ui.view">
        <field name="name">pe.crm.lead.form.view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='lead_partner']/field[@name='partner_name']" position="after">
                <field name="pe_destination"/>
                <field name="pe_bc"/>
            </xpath>

            <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                <field name="pe_destination"/>
                <field name="pe_bc"/>
            </xpath>
        </field>
    </record>   
    
</data></odoo>